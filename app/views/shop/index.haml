%section.catalog-grid
  .container
    %h2.with-sorting
      Destacados
    .row
      - @featured.each do |x|
        .col-lg-3.col-md-4.col-sm-6
          .tile
            .badges
              / %span.sale
            / .price-label
            /   = currency_unit
            /   {{product.price}}
            / {{product}}
            %a{href: product_path(category_id: x.product_category.permalink, product_id: x.permalink)}
              = image_tag x.default_image.path
            .footer
              %a{href: product_path(category_id: x.product_category.permalink, product_id: x.permalink)}
                = x.name